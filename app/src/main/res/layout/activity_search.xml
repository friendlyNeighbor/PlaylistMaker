<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

>
    <Toolbar
        android:id="@+id/search_back"
        style="@style/header"
        android:title="@string/search"
        android:navigationIcon="@drawable/ic_arrow_back_24"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">
    <EditText
        android:id="@+id/edit_text"
        android:layout_height="@dimen/pad_36"
        android:layout_width="match_parent"
        style="@style/search_field"
        android:inputType="text"
        android:hint="@string/search"
        android:lines="1"
        android:drawableStart="@drawable/ic_search_16"
        android:layout_marginTop="@dimen/pad_8"
        android:layout_marginBottom="@dimen/pad_8"
        android:saveEnabled="false"
        />
        <ImageView
            android:id="@+id/clear_search"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_clear_16"
            android:layout_gravity="end"
            android:padding="18dp"
            android:paddingEnd="28dp"
            android:visibility="gone"
            >
        </ImageView>
    </FrameLayout>
</LinearLayout>