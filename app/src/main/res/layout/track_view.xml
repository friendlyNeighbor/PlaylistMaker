<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="@dimen/height_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artworkUrl100"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundCorners"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_placeholder_45"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/test"
            android:textFontWeight="400"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:text="@string/test"
                android:textFontWeight="400"
                android:textSize="11sp"
                android:textColor="@color/yp_text_grey">

            </TextView>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_dot_13"></ImageView>

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/ys_display_regular"
                android:text="@string/test"
                android:textFontWeight="400"
                android:textSize="11sp"
                android:textColor="@color/yp_text_grey">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_arrow_forward_24"></ImageView>
</LinearLayout>