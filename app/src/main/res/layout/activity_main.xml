<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_marginTop="@dimen/title_margin_top"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/inner_pad"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_marginHorizontal="@dimen/inner_pad"
        android:layout_marginTop="@dimen/button_top"
        android:layout_marginBottom="@dimen/inner_pad"
        android:layout_weight="@dimen/full_weight"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:cornerRadius="@dimen/inner_pad"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconTint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_marginHorizontal="@dimen/inner_pad"
        android:layout_marginBottom="@dimen/inner_pad"
        android:layout_weight="@dimen/full_weight"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:cornerRadius="@dimen/inner_pad"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconTint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_marginHorizontal="@dimen/inner_pad"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_weight="@dimen/full_weight"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:cornerRadius="@dimen/inner_pad"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconTint="@color/black" />

</LinearLayout>