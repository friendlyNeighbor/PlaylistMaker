<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
>
    <TextView
        style="@style/header"
        android:text="@string/app_name"
        android:paddingLeft="@dimen/inner_pad"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_search"
        style="@style/mainButton"
        android:layout_marginTop="@dimen/button_top"
        android:text="@string/search"
        app:icon="@drawable/ic_search_24" />

    <Button
        android:id="@+id/button_media"
        style="@style/mainButton"
        android:text="@string/media"
        app:icon="@drawable/ic_media_24"
       />

    <Button
        android:id="@+id/button_settings"
        style="@style/mainButton"
        android:layout_marginBottom="@dimen/button_bottom"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings_24"
        />

</LinearLayout>