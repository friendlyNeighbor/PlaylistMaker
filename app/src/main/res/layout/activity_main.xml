<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/inner_pad"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_marginHorizontal="@dimen/inner_pad"
        android:layout_marginTop="@dimen/button_top"
        android:layout_marginBottom="@dimen/inner_pad"
        android:layout_weight="@dimen/full_weight"
        android:gravity="center"
        android:background="@drawable/bg_shapes"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:icon="@drawable/ic_search_24"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:backgroundTint="@color/white"  />

    <Button
        android:id="@+id/button_media"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_marginHorizontal="@dimen/inner_pad"
        android:layout_marginBottom="@dimen/inner_pad"
        android:layout_weight="@dimen/full_weight"
        android:gravity="center"
        android:background="@drawable/bg_shapes"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:icon="@drawable/ic_media_24"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:backgroundTint="@color/white" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_marginHorizontal="@dimen/inner_pad"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_weight="@dimen/full_weight"
        android:gravity="center"
        android:background="@drawable/bg_shapes"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:icon="@drawable/ic_settings_24"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:backgroundTint="@color/white" />

</LinearLayout>